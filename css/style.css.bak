*{
	margin:0;
	padding:0;
}

#main-container{
	width:1518px;
	margin:auto;
	background-image: linear-gradient(to right, #753a88, #cc2b5e);
}

#header{
	padding:10px 0;
	border-bottom:2px solid white;
	background-image: linear-gradient(to top, #61045F, #AA076B);
}

#logo-container{
	float:left;
    display: inline-block;
    margin:4px 0 0 40px;
}

#logo{
	height:50px;
	width:50px;
}

#heading{
	margin:0 auto;
	width: 200px;
    height: 60px;
    font-size: 40px;
	color:azure;
    text-shadow: 2px 5px 5px black;	
}

#developer{
	display:inline-block;
	float:right;
	color:azure;
	margin: -20px 10px 0 0;
    text-shadow: 2px 5px 5px black;	
}

#dropdown-container{
	margin: 50px 30px 45px 30px;
	float:left;
}

.label{
	margin: 10px;
    color: white;
    font-size: 22px;
    font-weight: bold;
	text-shadow: 2px 5px 5px black;
}

#dropdown-menu{
	height: 30px;
    width: 112px;
    padding: 0 15px;
    font-size: 20px;
    border-radius: 5px;
	box-shadow: 2px 2px 2px black;
}

.button{
	height: 30px;
    width: 90px;
    font-size: 16px;
    background-color: blue;
    color: white;
    margin: 50px 20px 45px 20px;
    border-radius: 10px;
    border: none;
    box-shadow: 2px 2px 2px black;
    cursor: pointer;
}

#start-stop-btn{
	float:right;
}

#stop{
	background-color: red;
}

#score-turn{
	display:none;
	height: 80px;
    padding: 10px;
    background-image: linear-gradient(to right, #6c1a6c,#d33ad3);
}

#score-card{
	float:right;
	width:450px;
}

#score-card>h2{
	display:inline-block;
	margin: 25px 0 25px 30px;
    color: white;
    font-size: 26px;
    font-weight: bold;
	text-shadow: 2px 5px 5px black;
}

#score-card>h2>h2{
	display:inline-block;
	margin: 25px 0 25px 20px;
}

#turn{
	float:left;
	width:450px;
}

#turn>h2{
	display:inline-block;
	margin: 25px 60px 25px 30px;
    color: white;
    font-size: 26px;
    font-weight: bold;
	text-shadow: 2px 5px 5px black;
}

#popup{
	display:none;
	position: fixed;
    height: 100%;
    width: 100%;
    z-index: 4;
    background-color: rgb(0, 0, 0, 0.85);
}

.Winpopup{
	display:none;
	height: 70px;
    width: 400px;
	z-index: 6;
    text-align: center;
    padding-top: 20px;
	margin:auto auto;
	bottom:0;
	top:0;
	right:0;
	left:0;
	position: fixed;
    color: white;
	text-shadow: 2px 2px 2px black;
    background-image: linear-gradient(to right, #ff6cab, #7366ff);
}

#welcome{
	text-align: center;
    font-size: 80px;
	color:azure;
    text-shadow: 2px 5px 5px black;
	margin-top:150px;
}

#choseGridMsg{
	color:azure;
	text-align: center;
    text-shadow: 2px 5px 5px black;
	padding-bottom:150px;
}

body{
	background-image: linear-gradient(to right, #753a88, #cc2b5e);
}

.clr{
	clear:both;
}